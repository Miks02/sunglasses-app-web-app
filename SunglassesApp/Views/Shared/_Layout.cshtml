<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sunčane naočare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SunglassesShop.styles.css" asp-append-version="true" />
</head>

<body class="">


    <div class="">
        <header class="">
            <nav
                class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow bg-body ">
                <div class="container-fluid">
                    <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Sunčane
                        naočare</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Index">Početna</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">O
                                    nama</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Katalog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Kontakt</a>
                            </li>

                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="main-wrapper">
            @RenderBody()

        </main>

    </div>



    <footer class="navbar   bg-body border-top min-vh-20">
        <div class="container-fluid">
            <a class="navbar-brand " href="#">Sunčane naočare</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
