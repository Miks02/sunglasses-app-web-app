@using SunglassesApp.ViewModels;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<div class="w-100 d-flex justify-content-center flex-column align-items-center position-center text-light">
    
    <form asp-action="Login" method="post" class="p-3 border  rounded-3  border-2 bg-dark">
        <h2 class="text-center">Login</h2>
        <div class="form-group p-2">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check p-1 mx-5">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-3 mb-3">Prijavi se</button>
        </div>
        <div>
        <a asp-action="Register">Nemate nalog? Registrujte se</a>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </form>

    
</div>


