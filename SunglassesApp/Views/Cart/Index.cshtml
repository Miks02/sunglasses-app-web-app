@using SunglassesApp.Models;
@using SunglassesApp.ViewModels;
@using SunglassesApp.Helpers;
@model CheckoutViewModel;
@{
    Layout = "_Layout";

    decimal productsPrice = 0;
    decimal finalPrice = 0;
    decimal delivery = 0;

    if(Model.Cart.Items.Count > 0)
    {
        @foreach(var i in Model.Cart.Items)
        {
            for(int j = 0; j < i.Quantity; j++)
            {
                productsPrice = i.Price + productsPrice;
            }
        }

        delivery = 499.99M;
        finalPrice = productsPrice + delivery;
    }
}


<div class="container w-50 mt-3">
    <div class="row">

        <div class="col-lg-8">
            <h3 class="text-light">Odabrani artikli</h3>

            @if(Model.Cart.Items.Count == 0)
            {
                <div class="d-flex align-items-center justify-content-center fs-4 text-dark bg-light text-center rounded-3 shadow fw-bold h-50">
                    Korpa je prazna
                </div>
            }
            else
            {
                @foreach (var i in Model.Cart.Items)
                {
                    <div class="cart-item d-flex justify-content-between bg-light p-3 shadow rounded-3">
                        <div class="d-flex">
                            <img src="@i.Product.ImageUrl" alt="Product" class="product-img me-3">
                            <div>
                                <h5>@i.Product.Name</h5>
                                <p class="text-muted">@i.Product.Description</p>
                                <input type="number" class="form-control w-25" value="@i.Quantity">
                            </div>
                        </div>
                        <div class="d-flex flex-column justify-content-between">
                            <span>@i.Price RSD</span>
                            <form asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@i.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Ukloni</button>

                            </form>
                        </div>
                    </div>
                }
            }
            

            

        </div>

      
        <div class="col-lg-4">
            <div class="cart-summary bg-light shadow">
                <h4>Korpa</h4>
                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between">
                        <span>Cena proizvoda:</span>
                        <span>@productsPrice RSD</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span>Dostava:</span>
                        <span>@delivery RSD</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span class="total-price">Ukupno:</span>
                        <span class="total-price">@finalPrice RSD</span>
                    </li>
                </ul>
                <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#checkoutModal">
                    Nastavi na plaćanje
                </button>
            </div>

           
            <div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="checkoutModalLabel">Unesite podatke za isporuku</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zatvori"></button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Checkout" asp-controller="Order" method="post">
                                <input type="hidden" asp-for="Cart" />

                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">Grad</label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PostalCode" class="form-label">Poštanski broj</label>
                                    <input asp-for="PostalCode" class="form-control" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ShippingAddress" class="form-label">Adresa dostave</label>
                                    <input asp-for="ShippingAddress" class="form-control" />
                                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success w-100">Potvrdi porudžbinu</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>