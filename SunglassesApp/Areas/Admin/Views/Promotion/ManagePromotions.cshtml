
@{
    Layout = "_AdminLayout";
}

@model IEnumerable<SunglassesApp.Models.Promotion>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Proizvodi</h1>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3 alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="card mt-4 bg-gray">
        
        <div class="card-header  text-center text-light bg-gray">
            <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Tabela svih proizvoda sa lagera</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive  border-top rounded-top">
                <table class="table table-hover table-secondary ">
                    <thead class="table-dark text-light">
                        <tr>
                            <th>Naziv promocije</th>
                            <th>Akcija</th>
                            <th>Početak</th>
                            <th>Kraj</th>
                            <th>Izmeni</th>
                            <th>Obriši</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.DiscountPercentage%</td>
                                <td>@p.StartDate?.ToString("dd.MM.yyyy")</td>
                                <td>@p.EndDate?.ToString("dd.MM.yyyy")</td>
                                
                                <td>
                                    <form asp-action="EditPromotion" asp-controller="Promotion" asp-route-id="@p.Id" method="get" class="d-inline">
                                        <button type="submit" class="border-0 bg-transparent p-0">
                                            <i class="bi bi-pencil text-success fw-bolder p-2 " style="font-size: 1.2rem"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="DeletePromotion" asp-controller="Promotion" asp-area="Admin" asp-route-id="@p.Id" method="post" class="d-inline">
                                        <button type="submit" class="border-0 bg-transparent p-0">
                                            <i class="bi bi-trash text-danger fw-bolder p-2" style="font-size: 1.2rem"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </div>

        

    </div>


</div>