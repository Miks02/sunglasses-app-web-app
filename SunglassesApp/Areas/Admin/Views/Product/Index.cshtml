@model IEnumerable<SunglassesApp.Models.Product>
@{
    Layout = "_AdminLayout";

}

<h1>Statistika</h1>

<div class="container ">
    <div class="row w-100 justify-content-center">

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">BROJ KUPACA</h6>
                            <h2 class="card-text">0</h2>
                        </div>
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <div class="mt-2">
                        
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">BROJ PROIZVODA</h6>
                            <h2 class="card-text">@Model.Count()</h2>
                        </div>
                        <i class="fas fa-glasses fa-3x"></i>
                    </div>
                    <div class="mt-2">
                       
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">PORUDÅ½BINE</h6>
                            <h2 class="card-text">326</h2>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x"></i>
                    </div>
                    <div class="mt-2">
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4 bg-gray shadow ">
            <div class="card-header  text-center text-light bg-gray">
                
                <h5 class="mb-0"><i class="fas fa-trophy me-2"></i> TOP 5 najprodavanijih proizvoda</h5>
            </div>
            <div class="card-body">

                <div class="table-responsive  border-top rounded-top">

                    <table class="table table-hover table-secondary ">

                        <thead class="table-dark text-light">
                            <tr>  
                                <th>Proizvod</th>
                                <th>Cena</th>
                                <th>Prodatih komada</th>
                                <th>Ocena</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var p in Model)
                            {
                                <tr>
                                    <td>@p.Name</td>
                                    <td>@p.Price</td>
                                    <td>@p.TimesBought</td>
                                    <td>
                                        @{
                                            var avgRating = p.Ratings.Any() ? p.Ratings.Average(r => r.Score) : 0;
                                        }
                                        @avgRating.ToString("0.0")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card mt-4 bg-gray shadow ">
            <div class="card-header  text-center text-light bg-gray">

                <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Brendovi proizvoda po oceni</h5>
            </div>
            <div class="card-body">

                <div class="table-responsive  border-top rounded-top">

                    <table class="table table-hover table-secondary ">

                        <thead class="table-dark text-light">
                            <tr>
                                <th>Brand</th>
                                <th>Cena</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.Brand</td>
                                    <td>@p.Price</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>